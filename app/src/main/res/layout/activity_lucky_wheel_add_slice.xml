<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog"
    android:layout_marginVertical="20dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Thêm Slide"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:minHeight="40dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#45CAF2"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tt"
        >

        <TextView
            android:id="@+id/text_in_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text=""
            android:textSize="16dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/slice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:hint="Nội dung"
        android:maxLength="20"
        android:drawableRight="@drawable/ic_clarity_pencil_solid"
        />
    <EditText
        android:id="@+id/slice_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slice_content"
        android:text="Màu nền"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:textColor="@color/randomElementBlack"
        android:maxLength="20"
        android:drawableRight="@drawable/ic_circle_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/slice_color">
        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_cancel_button"
            android:src="@drawable/ic_cancel"
            >
        </ImageButton>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <ImageButton
            android:id="@+id/oke_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_accept_button"
            android:src="@drawable/ic_check_button"
            >
        </ImageButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>