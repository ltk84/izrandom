<?xml version="1.0" encoding="utf-8"?>
<LinearLayout LuckyWheel:background_color="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LuckyWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="wrap_content">
    <TextView
        android:id="@+id/textTitle"
        style="@style/AppBarTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Làm gì bây giờ?"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/carouselView"
        app:layout_constraintEnd_toEndOf="@+id/tb_lucky_wheel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_lucky_wheel"
        android:layout_marginBottom="30dp"/>
    <com.bluehomestudio.luckywheel.LuckyWheel
        android:id="@+id/wheel_carousel"
        LuckyWheel:background_color="@color/gold"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        app:ignore="NamespaceTypo" />
</LinearLayout>